<script>
    // Variables globales para configuraci√≥n
    let config = {
        bpmThreshold: 120,
        vibrationEnabled: true,
        medicationTime1: "08:00",
        medicationTime2: "20:00",
        notificationLevel: "tutor_medico",
        volumeLevel: "medio",
        isRecording: false,
        lastMedicationAlert: null
    };

    // Funci√≥n principal para cambiar pantallas
    function showScreen(id) {
        document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
        document.getElementById('screen' + id).classList.add('active');
        
        // Agregar efecto de vibraci√≥n simulada
        if (config.vibrationEnabled) {
            document.querySelector('.watch').style.animation = 'vibrate 0.1s';
            setTimeout(() => {
                document.querySelector('.watch').style.animation = '';
            }, 100);
        }
    }

    // Actualizar signos vitales con alertas inteligentes
    function updateVitals() {
        const bpm = Math.floor(Math.random() * 50) + 60;
        const ox = Math.floor(Math.random() * 8) + 94;
        const systolic = Math.floor(Math.random() * 60) + 110;
        const diastolic = Math.floor(Math.random() * 30) + 60;
        const pasos = Math.floor(Math.random() * 15000) + 2000;
        const temp = (Math.random() * 2 + 36).toFixed(1);
        
        // Actualizar valores en pantalla
        document.getElementById('bpm').textContent = bpm;
        document.getElementById('oxigeno').textContent = ox;
        document.getElementById('presion').textContent = systolic + "/" + diastolic;
        document.getElementById('pasos').textContent = pasos.toLocaleString();
        document.getElementById('temperatura').textContent = temp;
        
        // Alertas inteligentes
        checkVitalAlerts(bpm, ox, systolic, diastolic, temp);
    }

    // Sistema de alertas inteligentes
    function checkVitalAlerts(bpm, ox, systolic, diastolic, temp) {
        const bpmElement = document.getElementById('bpm');
        const oxElement = document.getElementById('oxigeno');
        const presionElement = document.getElementById('presion');
        const tempElement = document.getElementById('temperatura');
        
        // Resetear alertas
        [bpmElement, oxElement, presionElement, tempElement].forEach(el => {
            el.classList.remove('vital-alert');
        });
        
        // Verificar alertas
        if (bpm > config.bpmThreshold || bpm < 50) {
            bpmElement.classList.add('vital-alert');
            sendAlert(`‚ö†Ô∏è Frecuencia card√≠aca anormal: ${bpm} BPM`);
        }
        
        if (ox < 95) {
            oxElement.classList.add('vital-alert');
            sendAlert(`‚ö†Ô∏è Ox√≠geno bajo: ${ox}%`);
        }
        
        if (systolic > 140 || diastolic > 90) {
            presionElement.classList.add('vital-alert');
            sendAlert(`‚ö†Ô∏è Presi√≥n arterial alta: ${systolic}/${diastolic}`);
        }
        
        if (temp > 37.5 || temp < 35.5) {
            tempElement.classList.add('vital-alert');
            sendAlert(`‚ö†Ô∏è Temperatura anormal: ${temp}¬∞C`);
        }
    }

    // Sistema de alertas
    function sendAlert(message) {
        if (config.notificationLevel === "tutor_medico") {
            console.log("Enviando alerta a tutor y m√©dico:", message);
        }
        
        // Simular notificaci√≥n visual
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert-box';
        alertDiv.innerHTML = `<i class="fa-solid fa-exclamation-triangle"></i> ${message}`;
        document.body.appendChild(alertDiv);
        
        setTimeout(() => {
            alertDiv.remove();
        }, 5000);
    }

    // Actualizar reloj con verificaci√≥n de recordatorios
    function updateClock() {
        const now = new Date();
        const h = now.getHours().toString().padStart(2, '0');
        const m = now.getMinutes().toString().padStart(2, '0');
        document.getElementById('clock').innerHTML = `<i class="fa-regular fa-clock"></i> ${h}:${m}`;
        
        // Verificar recordatorios de medicaci√≥n
        checkMedicationReminders(h, m);
        
        // Simular descarga de bater√≠a
        updateBattery();
    }

    // Sistema de recordatorios de medicaci√≥n
    function checkMedicationReminders(hour, minute) {
        const currentTime = `${hour}:${minute}`;
        
        if (currentTime === config.medicationTime1 && config.lastMedicationAlert !== currentTime) {
            medicationAlert("¬°Hora de tu medicaci√≥n matutina!");
            config.lastMedicationAlert = currentTime;
        }
        
        if (currentTime === config.medicationTime2 && config.lastMedicationAlert !== currentTime) {
            medicationAlert("¬°Hora de tu medicaci√≥n nocturna!");
            config.lastMedicationAlert = currentTime;
        }
    }

    // Alerta de medicaci√≥n
    function medicationAlert(message) {
        const alertDiv = document.createElement('div');
        alertDiv.className = 'alert-box';
        alertDiv.innerHTML = `<i class="fa-solid fa-capsules"></i> ${message}`;
        alertDiv.style.position = 'fixed';
        alertDiv.style.top = '50%';
        alertDiv.style.left = '50%';
        alertDiv.style.transform = 'translate(-50%, -50%)';
        alertDiv.style.zIndex = '9999';
        document.body.appendChild(alertDiv);
        
        // Reproducir sonido (simulado)
        playSound();
        
        setTimeout(() => {
            alertDiv.remove();
        }, 10000);
    }

    // Simular bater√≠a
    function updateBattery() {
        const batteryElement = document.getElementById('battery');
        let currentBattery = parseInt(batteryElement.textContent);
        
        // Simular descarga lenta
        if (Math.random() < 0.01) { // 1% de probabilidad cada minuto
            currentBattery = Math.max(0, currentBattery - 1);
            batteryElement.textContent = currentBattery + '%';
            
            if (currentBattery <= 20) {
                sendAlert(`üîã Bater√≠a baja: ${currentBattery}%`);
            }
        }
    }

    // GPS mejorado para Santiago, Chile
    function getGPS() {
        const gpsStatus = document.getElementById('gpsStatus');
        gpsStatus.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> Obteniendo ubicaci√≥n en Santiago, Chile...';
        
        setTimeout(() => {
            // Coordenadas de Santiago, Chile (zona central)
            const locations = [
                { lat: "-33.4489", lon: "-70.6693", area: "Centro de Santiago" },
                { lat: "-33.4372", lon: "-70.6506", area: "Providencia" },
                { lat: "-33.4569", lon: "-70.6483", area: "√ëu√±oa" },
                { lat: "-33.4734", lon: "-70.6410", area: "La Reina" },
                { lat: "-33.4398", lon: "-70.6545", area: "Las Condes" }
            ];
            
            const randomLocation = locations[Math.floor(Math.random() * locations.length)];
            
            gpsStatus.innerHTML = `
                <i class="fa-solid fa-location-dot"></i> 
                <strong>Ubicaci√≥n actual:</strong><br>
                <span style="font-size:1.1em;color:#0af;">${randomLocation.area}</span><br>
                <span style="font-size:0.9em;">Lat: <b>${randomLocation.lat}</b> | Lon: <b>${randomLocation.lon}</b></span>
                <br><br>
                <a href="https://maps.google.com/?q=${randomLocation.lat},${randomLocation.lon}" target="_blank" style="color:#0af;text-decoration:underline;font-size:1em;">
                    <i class="fa-solid fa-external-link-alt"></i> Ver en Google Maps
                </a>
            `;
            
            // Registrar ubicaci√≥n en historial
            addToHistory(`üìç Ubicaci√≥n: ${randomLocation.area}`);
        }, 2000);
    }

    // Compartir ubicaci√≥n con tutor
    function shareLocation() {
        sendAlert("üìç Ubicaci√≥n compartida con el tutor");
        addToHistory("üìç Ubicaci√≥n compartida con tutor");
    }

    // Funciones de configuraci√≥n
    function updateBpmThreshold() {
        config.bpmThreshold = parseInt(document.getElementById('bpmThreshold').value);
        sendAlert(`‚úÖ Umbral BPM actualizado a ${config.bpmThreshold}`);
    }

    function toggleVibration() {
        config.vibrationEnabled = !config.vibrationEnabled;
        const button = document.getElementById('vibrationToggle');
        button.textContent = config.vibrationEnabled ? 'Activada' : 'Desactivada';
        button.classList.toggle('off', !config.vibrationEnabled);
    }

    function updateMedicTime() {
        config.medicationTime1 = document.getElementById('medicTime').value;
        document.getElementById('medicReminder1').textContent = config.medicationTime1;
        sendAlert(`‚úÖ Recordatorio matutino: ${config.medicationTime1}`);
    }

    function updateMedicTime2() {
        config.medicationTime2 = document.getElementById('medicTime2').value;
        document.getElementById('medicReminder2').textContent = config.medicationTime2;
        sendAlert(`‚úÖ Recordatorio nocturno: ${config.medicationTime2}`);
    }

    function toggleNotifications() {
        const levels = ["Solo tutor", "Tutor + M√©dico", "Emergencia"];
        const button = document.getElementById('notificationToggle');
        const currentIndex = levels.indexOf(button.textContent);
        const nextIndex = (currentIndex + 1) % levels.length;
        button.textContent = levels[nextIndex];
        config.notificationLevel = levels[nextIndex];
    }

    function updateVolume() {
        config.volumeLevel = document.getElementById('volumeLevel').value;
        sendAlert(`üîä Volumen: ${config.volumeLevel}`);
    }

    // Funciones de mensajer√≠a por voz
    function recordVoiceMessage() {
        const button = event.target;
        if (!config.isRecording) {
            config.isRecording = true;
            button.innerHTML = '<i class="fa-solid fa-stop sound-wave"></i> Detener Grabaci√≥n';
            button.style.background = 'linear-gradient(90deg, #dc3545 60%, #c82333 100%)';
            
            // Simular grabaci√≥n
            setTimeout(() => {
                config.isRecording = false;
                button.innerHTML = '<i class="fa-solid fa-microphone"></i> Grabar Mensaje de Voz';
                button.style.background = 'linear-gradient(90deg, #28a745 60%, #20c997 100%)';
                sendAlert("üé§ Mensaje de voz grabado correctamente");
            }, 3000);
        }
    }

    function sendTextMessage() {
        const messages = [
            "Estoy bien, gracias por preguntar",
            "Necesito ayuda con algo",
            "Todo est√° en orden aqu√≠",
            "Recordar cita m√©dica",
            "Medicaci√≥n tomada correctamente"
        ];
        
        const randomMessage = messages[Math.floor(Math.random() * messages.length)];
        sendAlert(`üì® Mensaje enviado: "${randomMessage}"`);
    }

    function emergencyCall() {
        sendAlert("üìû Llamando al tutor...");
        setTimeout(() => {
            sendAlert("‚òéÔ∏è Conexi√≥n establecida con el tutor");
        }, 2000);
    }

    // Funci√≥n SOS mejorada
    function sosEmergency() {
        const sosBtn = document.getElementById('sosBtn');
        sosBtn.innerHTML = '<i class="fa-solid fa-spinner fa-spin"></i> ENVIANDO SOS...';
        sosBtn.style.background = 'linear-gradient(90deg, #dc3545 60%, #c82333 100%)';
        
        setTimeout(() => {
            sosBtn.innerHTML = '<i class="fa-solid fa-check"></i> SOS ENVIADO';
            sendAlert("üö® SOS enviado al tutor y servicios m√©dicos");
            addToHistory("üö® Bot√≥n SOS activado");
            
            // Simular respuesta del tutor
            setTimeout(() => {
                addToHistory("üìû Tutor notificado - En camino");
                sosBtn.innerHTML = '<i class="fa-solid fa-triangle-exclamation"></i> EMERGENCIA SOS';
                sosBtn.style.background = 'linear-gradient(90deg, #ff4d4d 60%, #ff0000 100%)';
            }, 5000);
        }, 2000);
    }

    // Funciones auxiliares
    function playSound() {
        // Simulaci√≥n de sonido
        console.log("üîä Reproduciendo sonido...");
    }

    function addToHistory(entry) {
        const now = new Date();
        const time = now.getHours().toString().padStart(2, '0') + ':' + now.getMinutes().toString().padStart(2, '0');
        console.log(`Historial [${time}]: ${entry}`);
    }

    // Inicializaci√≥n
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('sosBtn').onclick = sosEmergency;
        
        // Actualizar elementos seg√∫n configuraci√≥n
        document.getElementById('medicReminder1').textContent = config.medicationTime1;
        document.getElementById('medicReminder2').textContent = config.medicationTime2;
        
        // Iniciar actualizaciones
        updateVitals();
        updateClock();
        
        // Mensaje de bienvenida
        setTimeout(() => {
            sendAlert("üíñ VitalCare Watch iniciado correctamente");
        }, 1000);
    });

    // Intervalos de actualizaci√≥n
    setInterval(updateVitals, 5000);  // Cada 5 segundos
    setInterval(updateClock, 1000);   // Cada segundo

    // Efectos de vibraci√≥n simulados
    const vibrateCSS = `
        @keyframes vibrate {
            0% { transform: translate(0); }
            20% { transform: translate(-1px, 1px); }
            40% { transform: translate(-1px, -1px); }
            60% { transform: translate(1px, 1px); }
            80% { transform: translate(1px, -1px); }
            100% { transform: translate(0); }
        }
    `;
    
    const style = document.createElement('style');
    style.textContent = vibrateCSS;
    document.head.appendChild(style);
</script>

</body>
</html>
